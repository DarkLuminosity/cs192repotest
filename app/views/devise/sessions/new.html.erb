<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <footer id="footer" class="section-bg">
    <div class="footer-top">
      <div class="container">

        <div class="row">

          <div class="col-lg-60">

            <div class="row">

                <div class="col-lg-6">

                  <div class="footer-info">
                    <h3>Log in</h3>
