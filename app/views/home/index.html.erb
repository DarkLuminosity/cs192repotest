<body>

	<section id="intro" class="clearfix">
	    <div class="container d-flex h-200">
	      <div class="row justify-content-center align-self-center">
	        <div class="col-md-6 intro-info order-md-first order-last">
	          <h2>Schedule<br>Optimization <span>For Students!</span></h2>
	          <div>
	            	<%if admin_signed_in?%>
					  	<h2> ADMIN </h2>
				      	<div>
				    		Signed in as ... <%= current_admin.email %>
				      	</div>
				   	<%elsif user_signed_in?%>
				   		<h2> USER </h2>
				      	<div>
				      		Signed in as ... <%= current_user.email %>
				      	</div>
				    <% else %>
					    <%= link_to "User Login", new_user_session_path,  class:"btn btn-get-started" %>
					    <%= link_to "Create New User Account", new_user_registration_path,  class:"btn btn-get-started" %>
					    <%= link_to "Admin Login", new_admin_session_path,  class:"btn btn-get-started" %>
					    <%= link_to "Create New Admin Account", new_admin_registration_path,  class:"btn btn-get-started" %>
				    <%end%>
	          	<div class="col-md-6 intro-info order-md-first order-last">

        		</div>

	          </div>
	        </div>
	  
	        <div class="col-md-6 intro-img order-md-last order-first">
	          <img alt="" class="img-fluid">
	        </div>
	      </div>

	    </div>
 	</section>
</body>
